/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.container {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  background-image: url("https://636c-cloud1-6goql39af90fcd31-1313692077.tcb.qcloud.la/docsmall/open.jpg?sign=422b198f73fc8862fb487ab68cc18998&t=1662361839");
  background-size: cover;
  /* -moz-background-size:100% 100%; */
  background-repeat: no-repeat;
  background-position:center center;
}

.open {
  height: 100%;
  width: 100%;
}

.start {
  background: transparent;
}

/* 弹窗 */
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {

  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;

}

.modal-dialog {
  overflow: hidden;
  position: fixed;
  left: 0;
  z-index: 9999;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}

.modal-container {
  width: 420rpx;
  height: 700rpx;
  overflow: hidden;
  position: fixed;
  top: 35%;
  left: 25%;
  z-index: 9999;
}


.modal-title {
  padding-top: 10rpx;
  padding-bottom: 2rpx;
  font-size: 40rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  /* padding: 60rpx 70rpx; */
  font-size: 30rpx;
  word-break: break-all;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  width: 420rpx;
  display: flex;
  position: absolute;
  bottom: -8%;
  flex-direction: row;
  height: 200rpx;
  /* border-top: 1px solid #dedede; */
  font-size: 34rpx;
  line-height: 86rpx;
  padding-bottom: 10px;
  background: transparent;
}

.btn-cancel {
  width: 50%;
  /* color: #666; */
  text-align: center;
  /* border-right: 1px solid #dedede; */
  background: transparent;
}

.btn-confirm {
  width: 50%;
  /* color: #ec5300; */
  text-align: center;
  background: transparent;
  /* background-color: #fff; */
}